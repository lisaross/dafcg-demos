---
import Layout from '../components/Layout.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import ProgressBar from '../components/ProgressBar.astro';
import StatusBadge from '../components/StatusBadge.astro';
---

<Layout title="DAFCG Benchmarking Study - Streamlined Survey">
  <!-- Survey Container with DAFCG Purple Background -->
  <div class="min-h-screen bg-[#391892] p-4 sm:p-6 lg:p-8">
    <div class="max-w-4xl mx-auto">
      
      <!-- Progress Section -->
      <div class="bg-white p-4 sm:p-6 border-b border-gray-200">
        <div class="flex justify-between items-center mb-3">
          <span class="text-sm font-semibold text-[#391892]">
            Section 1 of 7: Quick Basics
          </span>
          <span class="text-sm text-[#391892] font-medium">
            Let's start with the fundamentals!
          </span>
        </div>
        <ProgressBar value={14.3} variant="success" />
      </div>

      <!-- Survey Content -->
      <div class="bg-gray-50 p-4 sm:p-6 space-y-8">
        
        <!-- Section 1: Quick Basics -->
        <Card title="1. Quick Basics" description="Let's start with the fundamentals about your consulting firm" variant="elevated">
          <div class="mb-4 text-center">
            <span class="inline-block bg-orange-100 text-orange-800 text-sm font-semibold px-3 py-1 rounded-[10px] border border-orange-200">
              DRAFT - For Review Only
            </span>
          </div>
          <div class="space-y-6">
            
            <!-- Company Name & Website -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">
                  Company Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="Enter your firm name"
                />
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">
                  Website (optional)
                </label>
                <input 
                  type="url" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="https://yourfirm.com"
                />
              </div>
            </div>

            <!-- Primary Focus -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">
                Primary Consulting Focus <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <select 
                  id="primaryFocusSelect"
                  class="w-full px-4 py-3 pr-10 border-2 border-gray-200 rounded-[10px] focus:ring-2 focus:ring-[#18DD89] focus:border-[#18DD89] transition-all duration-200 bg-white shadow-lg hover:border-[#391892] hover:shadow-xl appearance-none cursor-pointer"
                >
                  <option value="" class="text-gray-400">Select your primary focus</option>
                  <option value="strategy" class="text-gray-900">Strategy & Management Consulting</option>
                  <option value="technology" class="text-gray-900">Technology & Digital Transformation</option>
                  <option value="operations" class="text-gray-900">Operations & Process Improvement</option>
                  <option value="financial" class="text-gray-900">Financial Advisory & M&A</option>
                  <option value="hr" class="text-gray-900">Human Resources & Change Management</option>
                  <option value="marketing" class="text-gray-900">Marketing & Brand Strategy</option>
                  <option value="other" class="text-[#391892] font-medium">Other (please specify)</option>
                </select>
                <!-- Custom dropdown arrow -->
                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
              </div>
              <div id="primaryFocusOther" class="mt-4 hidden transition-all duration-300">
                <label class="block text-sm font-medium text-gray-700 mb-2">Please specify your consulting focus:</label>
                <input 
                  type="text" 
                  class="w-full px-4 py-3 border-2 border-[#18DD89]/30 rounded-[10px] focus:ring-2 focus:ring-[#18DD89] focus:border-[#18DD89] transition-all duration-200 bg-[#18DD89]/5 placeholder-gray-500" 
                  placeholder="e.g., Legal Consulting, Healthcare Advisory, etc."
                />
              </div>
            </div>

            <!-- Years in Business -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">
                Years in Business <span class="text-red-500">*</span>
              </label>
              <div class="relative">
                <select class="w-full px-4 py-3 pr-10 border-2 border-gray-200 rounded-[10px] focus:ring-2 focus:ring-[#18DD89] focus:border-[#18DD89] transition-all duration-200 bg-white shadow-lg hover:border-[#391892] hover:shadow-xl appearance-none cursor-pointer">
                  <option value="" class="text-gray-400">Select range</option>
                  <option value="0-2" class="text-gray-900">0-2 years</option>
                  <option value="3-5" class="text-gray-900">3-5 years</option>
                  <option value="6-10" class="text-gray-900">6-10 years</option>
                  <option value="11-20" class="text-gray-900">11-20 years</option>
                  <option value="20+" class="text-gray-900">20+ years</option>
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
              </div>
            </div>

            <!-- Geographic Markets -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">
                Geographic Markets <span class="text-red-500">*</span>
              </label>
              <p class="text-sm text-gray-600 mb-3">Check all that apply</p>
              <div class="space-y-3">
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 text-[#18DD89] border-gray-300 rounded focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900">Local/Regional</span>
                </label>
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 text-[#18DD89] border-gray-300 rounded focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900">National</span>
                </label>
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 text-[#18DD89] border-gray-300 rounded focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900">International</span>
                </label>
              </div>
            </div>

          </div>
        </Card>

        <!-- Section 2: Team Structure -->
        <Card title="2. Team Structure" description="Help us understand your firm's organizational structure" variant="elevated">
          <div class="space-y-6">
            
            <!-- Total Employees -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">
                Total Employees <span class="text-red-500">*</span>
              </label>
              <p class="text-sm text-gray-600 mb-3">Include all full-time equivalent employees</p>
              <input 
                type="number" 
                class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                placeholder="25" 
                min="1"
              />
              <div class="mt-2 p-3 bg-[#18DD89]/10 border border-[#18DD89]/20 rounded-[10px] flex items-start gap-2">
                <svg class="w-4 h-4 text-[#391892] mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
                <span class="text-sm text-[#212C40]">We'll use this to calculate revenue per employee</span>
              </div>
            </div>

            <!-- Team Breakdown -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">Partners/Principals</label>
                <input 
                  type="number" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="3" 
                  min="0"
                />
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">Senior Consultants</label>
                <input 
                  type="number" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="8" 
                  min="0"
                />
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">Junior Consultants</label>
                <input 
                  type="number" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="12" 
                  min="0"
                />
              </div>
            </div>

            <!-- Support Staff -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">Support Staff (Non-billable)</label>
              <p class="text-sm text-gray-600 mb-3">Admin, sales, operations, marketing</p>
              <input 
                type="number" 
                class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                placeholder="2" 
                min="0"
              />
            </div>

          </div>
        </Card>

        <!-- Section 3: Financial Performance -->
        <Card title="3. Financial Performance" description="Your 2024 financial metrics (all information confidential)" variant="elevated">
          <div class="space-y-6">
            
            <!-- 2024 Annual Revenue -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">
                2024 Annual Revenue <span class="text-red-500">*</span>
              </label>
              <p class="text-sm text-gray-600 mb-4">Total revenue for 2024 or best estimate</p>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                <label class="flex items-center space-x-2 cursor-pointer p-3 bg-white/70 hover:bg-[#18DD89]/5 rounded-[10px] border border-transparent hover:border-[#18DD89]/20 transition-colors">
                  <input type="radio" name="revenue" class="w-4 h-4 text-[#18DD89] border-gray-300 focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900 text-sm font-medium">Under $1M</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer p-3 bg-white/70 hover:bg-[#18DD89]/5 rounded-[10px] border border-transparent hover:border-[#18DD89]/20 transition-colors">
                  <input type="radio" name="revenue" class="w-4 h-4 text-[#18DD89] border-gray-300 focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900 text-sm font-medium">$1M - $3M</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer p-3 bg-white/70 hover:bg-[#18DD89]/5 rounded-[10px] border border-transparent hover:border-[#18DD89]/20 transition-colors">
                  <input type="radio" name="revenue" class="w-4 h-4 text-[#18DD89] border-gray-300 focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900 text-sm font-medium">$3M - $5M</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer p-3 bg-white/70 hover:bg-[#18DD89]/5 rounded-[10px] border border-transparent hover:border-[#18DD89]/20 transition-colors">
                  <input type="radio" name="revenue" class="w-4 h-4 text-[#18DD89] border-gray-300 focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900 text-sm font-medium">$5M - $10M</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer p-3 bg-white/70 hover:bg-[#18DD89]/5 rounded-[10px] border border-transparent hover:border-[#18DD89]/20 transition-colors">
                  <input type="radio" name="revenue" class="w-4 h-4 text-[#18DD89] border-gray-300 focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900 text-sm font-medium">Over $10M</span>
                </label>
              </div>
            </div>

            <!-- Gross Margin -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">
                Gross Margin <span class="text-red-500">*</span>
              </label>
              <p class="text-sm text-gray-600 mb-4">Revenue minus direct project costs (best estimate)</p>
              <input 
                type="range" 
                class="w-full h-2 bg-gray-200 rounded-[10px] appearance-none cursor-pointer slider" 
                min="10" 
                max="80" 
                value="45"
              />
              <div class="text-center mt-2">
                <span class="text-lg font-semibold text-[#391892]">45%</span>
              </div>
            </div>

            <!-- Project vs Retainer -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">Project vs Retainer Revenue</label>
                <p class="text-sm text-gray-600 mb-3">% Project-based</p>
                <input 
                  type="number" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="70" 
                  min="0" 
                  max="100"
                />
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">&nbsp;</label>
                <p class="text-sm text-gray-600 mb-3">% Retainer-based</p>
                <input 
                  type="number" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="30" 
                  min="0" 
                  max="100"
                />
              </div>
            </div>

            <!-- Average Project Value -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">Average Project Value</label>
              <p class="text-sm text-gray-600 mb-3">Typical project size in dollars</p>
              <select class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-all duration-200 bg-white shadow-sm hover:border-gray-400 focus:shadow-md">
                <option value="" class="text-gray-500">Select range</option>
                <option value="under-25k">Under $25K</option>
                <option value="25k-50k">$25K - $50K</option>
                <option value="50k-100k">$50K - $100K</option>
                <option value="100k-250k">$100K - $250K</option>
                <option value="250k-500k">$250K - $500K</option>
                <option value="over-500k">Over $500K</option>
              </select>
            </div>

            <!-- Client Concentration -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">Top Client Concentration</label>
              <p class="text-sm text-gray-600 mb-4">What % of revenue comes from your largest client?</p>
              <input 
                type="range" 
                class="w-full h-2 bg-gray-200 rounded-[10px] appearance-none cursor-pointer slider" 
                min="5" 
                max="80" 
                value="25"
              />
              <div class="text-center mt-2">
                <span class="text-lg font-semibold text-[#391892]">25%</span>
              </div>
            </div>

          </div>
        </Card>

        <!-- Section 4: Billing & Utilization -->
        <Card title="4. Billing & Utilization" description="Pricing structure and team productivity metrics" variant="elevated">
          <div class="space-y-6">
            
            <!-- Hourly Rates -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">Partner Rate ($/hour)</label>
                <input 
                  type="number" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="450" 
                  min="0"
                />
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">Senior Rate ($/hour)</label>
                <input 
                  type="number" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="275" 
                  min="0"
                />
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">Junior Rate ($/hour)</label>
                <input 
                  type="number" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="175" 
                  min="0"
                />
              </div>
            </div>

            <!-- Team Utilization -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">
                Average Team Utilization <span class="text-red-500">*</span>
              </label>
              <p class="text-sm text-gray-600 mb-4">What % of available time is billable across your team?</p>
              <input 
                type="range" 
                class="w-full h-2 bg-gray-200 rounded-[10px] appearance-none cursor-pointer slider" 
                min="30" 
                max="95" 
                value="75"
              />
              <div class="text-center mt-2">
                <span class="text-lg font-semibold text-[#391892]">75%</span>
              </div>
            </div>

            <!-- Project Duration -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">Typical Project Duration</label>
              <p class="text-sm text-gray-600 mb-3">Average length of your projects</p>
              <select class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-all duration-200 bg-white shadow-sm hover:border-gray-400 focus:shadow-md">
                <option value="" class="text-gray-500">Select duration</option>
                <option value="under-2weeks">Under 2 weeks</option>
                <option value="2-4weeks">2-4 weeks</option>
                <option value="1-3months">1-3 months</option>
                <option value="3-6months">3-6 months</option>
                <option value="over-6months">Over 6 months</option>
              </select>
            </div>

            <!-- Pricing Models -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">Pricing Models Used</label>
              <p class="text-sm text-gray-600 mb-3">Check all that apply</p>
              <div class="space-y-3">
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 text-[#18DD89] border-gray-300 rounded focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900">Hourly Billing</span>
                </label>
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 text-[#18DD89] border-gray-300 rounded focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900">Fixed Fee Projects</span>
                </label>
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 text-[#18DD89] border-gray-300 rounded focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900">Monthly Retainers</span>
                </label>
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" class="w-4 h-4 text-[#18DD89] border-gray-300 rounded focus:ring-[#18DD89] focus:ring-2" />
                  <span class="text-gray-900">Value-Based Pricing</span>
                </label>
              </div>
            </div>

          </div>
        </Card>

        <!-- Section 5: Client Metrics -->
        <Card title="5. Client Metrics" description="Your client portfolio and business development performance" variant="elevated">
          <div class="space-y-6">
            
            <!-- Active Clients & Retention -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">
                  Active Clients <span class="text-red-500">*</span>
                </label>
                <input 
                  type="number" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="8" 
                  min="1"
                />
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-900 mb-2">Client Retention Rate</label>
                <p class="text-sm text-gray-600 mb-3">Annual retention %</p>
                <input 
                  type="number" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-[10px] focus:ring-2 focus:ring-[#18DD89]/20 focus:border-[#18DD89] transition-colors" 
                  placeholder="85" 
                  min="0" 
                  max="100"
                />
              </div>
            </div>

            <!-- Proposal Win Rate -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">Proposal Win Rate</label>
              <p class="text-sm text-gray-600 mb-4">What % of your proposals result in signed contracts?</p>
              <input 
                type="range" 
                class="w-full h-2 bg-gray-200 rounded-[10px] appearance-none cursor-pointer slider" 
                min="10" 
                max="90" 
                value="60"
              />
              <div class="text-center mt-2">
                <span class="text-lg font-semibold text-[#391892]">60%</span>
              </div>
            </div>

            <!-- Primary Lead Source -->
            <div>
              <label class="block text-sm font-semibold text-gray-900 mb-2">
                Primary Lead Source <span class="text-red-500">*</span>
              </label>
              <p class="text-sm text-gray-600 mb-3">Your most effective source of new clients</p>
              <div class="relative">
                <select 
                  id="leadSourceSelect"
                  class="w-full px-4 py-3 pr-10 border-2 border-gray-200 rounded-[10px] focus:ring-2 focus:ring-[#18DD89] focus:border-[#18DD89] transition-all duration-200 bg-white shadow-lg hover:border-[#391892] hover:shadow-xl appearance-none cursor-pointer"
                >
                  <option value="" class="text-gray-400">Select primary source</option>
                  <option value="referrals" class="text-gray-900">Client Referrals</option>
                  <option value="network" class="text-gray-900">Professional Network</option>
                  <option value="linkedin" class="text-gray-900">LinkedIn/Social Media</option>
                  <option value="content" class="text-gray-900">Content Marketing</option>
                  <option value="partnerships" class="text-gray-900">Partner Channels</option>
                  <option value="events" class="text-gray-900">Speaking/Events</option>
                  <option value="cold-outreach" class="text-gray-900">Cold Outreach</option>
                  <option value="other" class="text-[#391892] font-medium">Other (please specify)</option>
                </select>
                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
              </div>
              <div id="leadSourceOther" class="mt-4 hidden transition-all duration-300">
                <label class="block text-sm font-medium text-gray-700 mb-2">Please specify your lead source:</label>
