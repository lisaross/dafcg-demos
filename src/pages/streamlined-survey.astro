    function toggleOtherField(selectElement, targetId) {
      const otherField = document.getElementById(targetId);
      console.log('Toggling field:', targetId, 'Selected value:', selectElement.value);
      
      if (!otherField) {
        console.error('Other field not found:', targetId);
