---
import Layout from '../components/Layout.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
---

<Layout title="DAFCG Project Mockups">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 font-cooper-hewitt uppercase mb-4">
        DAFCG Project Mockups
      </h1>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      
      <!-- DAFCG Roadmap -->
      <Card 
        title="DAFCG Roadmap by Pillars"
        description="Interactive timeline showing the 5-pillar project roadmap from August to December 2025. Tracks acquisition, gathering, processing, analysis, and reporting phases with critical milestones."
        variant="default"
        href="/dafcg-roadmap-pillars"
      />

      <!-- Participant Journey -->
      <Card 
        title="Participant Journey"
        description="Interactive visual flow showing the complete participant experience from initial outreach through report delivery. Includes conversion rates, touchpoints, and success metrics at each stage."
        variant="default"
        href="/participant-journey"
      />

      <!-- Landing Page -->
      <Card 
        title="DRAFT Landing Page"
        description="Draft landing page for the benchmarking study. Still needs to be hosted with benchmark.davidafields.com domain."
        variant="default"
        href="https://benchmark-2026-landing.pages.dev/"
      />

      <!-- Participant Landing Page -->
      <Card 
        title="Participant Landing Page"
        description="Streamlined landing page for previous participants. Removes qualification barriers and gets them straight to data submission."
        variant="default"
        href="/participant-landing"
      />

      <!-- 30-Question Survey -->
      <Card 
        title="30-Question Benchmarking Survey"
        description="Comprehensive survey focusing on essential metrics firms already track. Features smart progress tracking, auto-calculations, and optimized layout for better completion rates."
        variant="default"
        href="/streamlined-survey"
      />

      <!-- Tech Stack Visual -->
      <Card 
        title="Technology Stack Overview"
        description="Visual representation of the technology architecture, tools, and platforms used in the DAFCG project. Shows integration points and data flow between systems."
        variant="default"
        href="/tech-stack-visual"
      />

      <!-- Survey Prep Checklist (Optional) -->
      <Card 
        title="Survey Preparation Checklist"
        description="Interactive checklist to help participants gather documents before starting the survey. Reduces completion time from 20+ to 10-12 minutes by ensuring they have the right information ready."
        variant="muted"
        href="/survey-prep-checklist"
      />

    </div>

    </div>
  </div>
</Layout>
