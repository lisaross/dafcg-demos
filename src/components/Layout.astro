---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "DAFCG project mockups and demonstrations" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <title>{title}</title>
    
    <style>
      @font-face {
        font-family: 'Cooper Hewitt';
        src: url('/fonts/CooperHewitt-Bold.woff2') format('woff2');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </head>
  
  <body class="min-h-screen bg-gray-50 font-inter text-gray-900">
    <!-- Navbar -->
    <nav class="bg-white shadow-sm border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo/Brand -->
          <div class="flex items-center">
            <a href="/" class="flex items-center space-x-2">
              <img src="/logos/dafcg-logo-original.png" alt="DAFCG" class="h-6 w-auto" />
              <span class="text-lg font-bold text-[#391892] font-cooper-hewitt uppercase whitespace-nowrap">
                DEMOS
              </span>
            </a>
          </div>
          
          <!-- Navigation Links -->
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-8">
              <a href="/" class="text-gray-900 hover:text-[#391892] px-3 py-2 rounded-[10px] text-sm font-medium transition-colors">
                Home
              </a>
              <a href="/participant-journey" class="text-gray-500 hover:text-[#391892] px-3 py-2 rounded-[10px] text-sm font-medium transition-colors">
                Participant Journey
              </a>
              <a href="/surveys" class="text-gray-500 hover:text-[#391892] px-3 py-2 rounded-[10px] text-sm font-medium transition-colors">
                Surveys
              </a>
              <a href="/tech-stack" class="text-gray-500 hover:text-[#391892] px-3 py-2 rounded-[10px] text-sm font-medium transition-colors">
                Tech Stack
              </a>
            </div>
          </div>
          
          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button type="button" class="inline-flex items-center justify-center p-2 rounded-[10px] text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-[#391892] transition-colors">
              <span class="sr-only">Open main menu</span>
              <!-- Menu icon -->
              <svg class="block h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t mt-auto">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Brand Column -->
          <div class="col-span-1">
            <div class="flex items-center space-x-3 mb-4">
              <img src="/logos/dafcg-logo-original.png" alt="DAFCG" class="h-6 w-auto" />
            </div>
            <p class="text-gray-600 text-sm mb-3">
              Project demonstrations and mockups.
            </p>
            <div class="text-sm text-gray-600 space-y-1">
              <p>David A. Fields Consulting Group</p>
              <p>+1.475.275.9075</p>
              <p>
                <a href="mailto:info@davidafields.com" class="hover:text-[#391892] transition-colors">
                  info@davidafields.com
                </a>
              </p>
            </div>
          </div>
          
          <!-- Navigation Column -->
          <div class="col-span-1">
            <h3 class="text-sm font-semibold text-gray-900 uppercase font-cooper-hewitt mb-4">
              NAVIGATION
            </h3>
            <ul class="space-y-2">
              <li><a href="/" class="text-gray-600 hover:text-[#391892] text-sm transition-colors">Home</a></li>
              <li><a href="/participant-journey" class="text-gray-600 hover:text-[#391892] text-sm transition-colors">Participant Journey</a></li>
              <li><a href="/surveys" class="text-gray-600 hover:text-[#391892] text-sm transition-colors">Surveys</a></li>
              <li><a href="/tech-stack" class="text-gray-600 hover:text-[#391892] text-sm transition-colors">Tech Stack</a></li>
            </ul>
          </div>
          
          <!-- Project Info Column -->
          <div class="col-span-1">
            <h3 class="text-sm font-semibold text-gray-900 uppercase font-cooper-hewitt mb-4">
              PROJECT
            </h3>
            <ul class="space-y-2">
              <li><span class="text-gray-600 text-sm">Status: Development</span></li>
              <li><span class="text-gray-600 text-sm">Framework: Astro + Tailwind</span></li>
              <li><span class="text-gray-600 text-sm">TypeScript: Enabled</span></li>
            </ul>
          </div>
        </div>
        
        <!-- Bottom Bar -->
        <div class="mt-8 pt-8 border-t border-gray-200">
          <p class="text-center text-gray-400 text-sm">
            Copyright © 2012 — 2025 David A. Fields and Ascendant Consulting, LLC. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  .font-cooper-hewitt {
    font-family: 'Cooper Hewitt', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }
  
  .font-inter {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }
</style>